FROM dqneo/imagemagickperl
MAINTAINER DQNEO

WORKDIR /opt/ImageMagick/src/ImageMagick-6.8.6-10
RUN ./configure --with-quantum-depth=16 --with-perl=/opt/perl/bin/perl
RUN make perl-sources

WORKDIR /opt/ImageMagick/src/ImageMagick-6.8.6-10/PerlMagick
RUN /opt/perl/bin/perl Makefile.PL
RUN make && make install

CMD /opt/perl/bin/perl -MImage::Magick -E 'say $Image::Magick::Q16::VERSION'

